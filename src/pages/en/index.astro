---
import BaseLayout from "../../layouts/BaseLayout.astro";
import GalleryLightbox from "../../components/GalleryLightbox.astro";
import { featuredItems, getPortfolioAlt } from "../../data/portfolio";
import { reviews, googleMapsReviewsUrl } from "../../data/reviews.en";
import { getStudioItems } from "../../data/studio";

const lang = "en";
const studioItems = getStudioItems(lang);
const whatsappLink = "https://wa.me/34600254338";
const instagramLink = "https://www.instagram.com/vigarartattoo/";
const mapsLink = "https://maps.app.goo.gl/aDDJfWMDJhcXpEHE7";

// SEO
const canonical = "https://vigarartattoo.pages.dev/en/";
const description =
  "Tattoo studio in Málaga by Rocío. Fine line, blackwork and color tattoos with a careful, personal approach.";

// Put your chosen hero photo in /public/images/hero/ and set the path here:
const heroImageSrc = "/images/heroImg/rocio_001.jpeg";

const featuredItemsEs = featuredItems.map((x) => ({
  ...x,
  alt: getPortfolioAlt(x, "en"),
}));

---

<BaseLayout
  lang="en"
  title="Vigarartattoo | Tattoo Studio in Málaga"
  description={description}
  canonical={canonical}
  alternateEs="https://vigarartattoo.pages.dev/"
  alternateEn="https://vigarartattoo.pages.dev/en/"
  ogImage="/images/heroImg/rocio_001.jpeg"
>
  <main class="mx-auto max-w-6xl px-4">
    <!-- Sticky header (appears on scroll) -->
    <div
      class="sticky-header pointer-events-none fixed left-0 right-0 top-0 z-[60] hidden"
      data-sticky-header
      data-hide-on-lightbox
    >
      <div class="mx-auto max-w-3xl px-4 pt-3">
        <div
          class="pointer-events-auto relative flex items-center justify-between gap-4 rounded-full glass-strong px-4 py-2"
        >
          <a href="/en/" class="text-sm font-semibold tracking-wide text-glass">
            Vigarartattoo
          </a>

          <!-- Sections nav (tablet + desktop) -->
          <nav
            class="hidden items-center gap-3 text-sm text-zinc-200 md:flex text-glass"
            data-section-nav
          >
            <a
              class="nav-pill hover:text-white border border-transparent rounded-full px-2 py-1"
              href="#portfolio"
              data-section-link="portfolio">Portfolio</a
            >
            <a
              class="nav-pill hover:text-white border border-transparent rounded-full px-2 py-1"
              href="#estilos"
              data-section-link="estilos">Styles</a
            >
            <a
              class="nav-pill hover:text-white border border-transparent rounded-full px-2 py-1"
              href="#estudio"
              data-section-link="estudio">Studio</a
            >
            <a
              class="nav-pill hover:text-white border border-transparent rounded-full px-2 py-1"
              href="#sobre"
              data-section-link="sobre">About</a
            >
            <a
              class="nav-pill hover:text-white border border-transparent rounded-full px-2 py-1"
              href="#contacto"
              data-section-link="contacto">Contact</a
            >
            <a
              class="nav-pill hover:text-white border border-transparent rounded-full px-2 py-1"
              href="/en/works">Works</a
            >
          </nav>

          <div
            class="hidden items-center gap-2 text-sm text-zinc-200 md:flex text-glass"
          >
            <a
              class="rounded-full border border-white/10 px-3 py-1 hover:bg-white/5"
              href="/">ES</a
            >
            <a
              class="rounded-full border border-white/10 px-3 py-1 bg-white/10 text-white"
              href="/en/"
              aria-current="page">EN</a
            >
          </div>

          <a
            class="rounded-full bg-white px-3 py-1.5 text-sm font-semibold text-zinc-950 hover:bg-zinc-200"
            href={whatsappLink}
            target="_blank"
            rel="noreferrer"
            aria-label="Book via WhatsApp"
            title="Book"
          >
            Book
          </a>
        </div>
      </div>
    </div>

    <!-- NAV -->
    <header class="relative flex items-center justify-between py-6">
      <a href="/en/" class="text-lg font-semibold tracking-wide">
        Vigarartattoo
      </a>

      <!-- ✅ Language switcher (mobile ONLY - centered) -->
      <div
        class="md:hidden absolute left-1/2 -translate-x-1/2 flex items-center gap-2 text-xs text-zinc-300"
      >
        <a
          class="rounded-full border border-white/10 px-2.5 py-1 hover:bg-white/5"
          href="/"
        >
          ES
        </a>
        <a
          class="rounded-full border border-white/10 px-2.5 py-1 bg-white/10 text-white"
          href="/en/"
          aria-current="page"
        >
          EN
        </a>
      </div>

      <!-- ✅ Top nav (tablet + desktop = md+) -->
      <nav class="hidden items-center gap-6 text-sm text-zinc-300 md:flex">
        <a class="hover:text-white" href="#portfolio">Portfolio</a>
        <a class="hover:text-white" href="#estilos">Styles</a>
        <a class="hover:text-white" href="#estudio">Studio</a>
        <a class="hover:text-white" href="#sobre">About</a>
        <a class="hover:text-white" href="#contacto">Contact</a>
        <a class="hover:text-white" href="/en/works">Works</a>
      </nav>

      <!-- ✅ Mobile menu button (ONLY < md) -->
      <div class="flex items-center gap-3 md:hidden">
        <button
          type="button"
          class="inline-flex items-center justify-center rounded-2xl border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white hover:bg-white/10"
          aria-label="Open menu"
          data-menu-open
        >
          Menu
        </button>
      </div>

      <!-- ✅ Language switcher (tablet + desktop = md+) -->
      <div class="hidden items-center gap-2 text-sm text-zinc-300 md:flex">
        <a
          class="rounded-full border border-white/10 px-3 py-1 hover:bg-white/5"
          href="/"
        >
          ES
        </a>
        <a
          class="rounded-full border border-white/10 px-3 py-1 bg-white/10 text-white"
          href="/en/"
          aria-current="page"
        >
          EN
        </a>
      </div>

      <!-- Mobile overlay (ONLY used on mobile) -->
      <div
        class="menu-overlay fixed inset-0 z-50 hidden md:hidden"
        data-menu-overlay
        aria-hidden="true"
      >
        <button
          class="menu-backdrop absolute inset-0 bg-black/70"
          aria-label="Close menu"
          data-menu-close
          type="button"></button>

        <div
          class="menu-panel absolute right-0 top-0 h-full w-[85%] max-w-sm border-l border-white/10 bg-zinc-950 p-6"
        >
          <div class="flex items-center justify-between">
            <div class="text-lg font-semibold">Vigarartattoo</div>
            <button
              type="button"
              class="rounded-2xl border border-white/15 bg-white/5 px-4 py-2 text-sm font-semibold text-white hover:bg-white/10"
              aria-label="Close menu"
              data-menu-close
            >
              Close
            </button>
          </div>

          <nav class="mt-8 grid gap-4 text-base">
            <a
              class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 hover:bg-white/10"
              href="#portfolio"
              data-menu-link>Portfolio</a
            >
            <a
              class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 hover:bg-white/10"
              href="#estilos"
              data-menu-link>Styles</a
            >
            <a
              class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 hover:bg-white/10"
              href="#estudio"
              data-menu-link
              >Studio
            </a>
            <a
              class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 hover:bg-white/10"
              href="#sobre"
              data-menu-link>About</a
            >
            <a
              class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 hover:bg-white/10"
              href="#contacto"
              data-menu-link>Contact</a
            >
            <a
              class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 hover:bg-white/10"
              href="/en/works"
              data-menu-link>Works →</a
            >

            <div class="mt-2 grid grid-cols-2 gap-3">
              <a
                class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-center hover:bg-white/10"
                href="/">ES</a
              >
              <a
                class="rounded-2xl border border-white/10 bg-white/10 px-4 py-3 text-center font-semibold text-white"
                href="/en/"
                aria-current="page">EN</a
              >
            </div>

            <a
              class="mt-3 rounded-2xl bg-white px-4 py-3 text-center font-semibold text-zinc-950 hover:bg-zinc-200"
              href={whatsappLink}
              target="_blank"
              rel="noreferrer"
            >
              Book via WhatsApp
            </a>

            <a
              class="rounded-2xl border border-white/10 bg-white/5 px-4 py-3 text-center hover:bg-white/10"
              href={instagramLink}
              target="_blank"
              rel="noreferrer"
            >
              Instagram
            </a>
          </nav>
        </div>
      </div>
    </header>

    <!-- HERO (photo + overlay) -->
    <section
      class="relative overflow-hidden rounded-3xl border border-white/10 bg-zinc-950"
    >
      <img
        src={heroImageSrc}
        alt="Rocío tattooing in the studio"
        class="absolute inset-0 h-full w-full object-cover"
        loading="eager"
        decoding="async"
        fetchpriority="high"
      />
      <div
        class="absolute inset-0 bg-gradient-to-r from-black/85 via-black/55 to-black/20"
      >
      </div>
      <div class="absolute inset-0 backdrop-blur-[1px]"></div>

      <div
        class="relative grid gap-10 px-6 py-14 md:grid-cols-2 md:px-12 md:py-20"
      >
        <div>
          <p class="text-xs uppercase tracking-[0.35em] text-zinc-200/80">
            Tattoo Studio in Málaga
          </p>

          <h1
            class="mt-4 text-4xl font-semibold leading-tight text-white md:text-6xl"
          >
            Art on skin, with detail, precision and skill.
          </h1>

          <p class="mt-6 text-base text-zinc-200 md:text-lg">
            Fine line and color tattoos. Carefully crafted designs, a friendly
            approach, and a clean result.
          </p>

          <div class="mt-8 flex items-center gap-4">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noreferrer"
              aria-label="Book via WhatsApp"
              title="WhatsApp"
              class="group flex h-12 w-12 items-center justify-center rounded-full border border-white/30 bg-white/10 transition hover:scale-110 hover:bg-white/20"
            >
              <svg
                class="h-7 w-7 text-green-400 transition group-hover:scale-110"
                viewBox="0 0 32 32"
                fill="currentColor"
              >
                <path
                  d="M16 2.7c-7.4 0-13.3 5.7-13.3 12.8 0 2.3.6 4.6 1.9 6.6L2 29.3l7.5-2.4c1.9 1 4.2 1.6 6.5 1.6 7.4 0 13.3-5.7 13.3-12.8S23.4 2.7 16 2.7zm0 23.3c-2.1 0-4.1-.6-5.9-1.6l-.4-.2-4.4 1.4 1.4-4.2-.3-.4c-1.2-1.8-1.8-3.8-1.8-5.9 0-6.1 5.2-11.1 11.4-11.1s11.4 5 11.4 11.1-5.2 11.1-11.4 11.1zm6.4-8.4c-.4-.2-2.2-1-2.6-1.1-.4-.1-.7-.2-1 .2-.3.4-1.1 1.1-1.4 1.4-.3.3-.5.3-.9.1-.4-.2-1.7-.6-3.2-2-.6-.5-1-1.1-1.3-1.5-.3-.4 0-.6.2-.8.2-.2.4-.4.6-.6.2-.2.3-.4.4-.6.1-.2.1-.4 0-.6-.1-.2-1-2.4-1.4-3.3-.4-.9-.7-.7-1-.7h-.9c-.3 0-.6.1-.9.4-.3.3-1.2 1.2-1.2 3 0 1.8 1.2 3.5 1.4 3.7.2.2 2.4 3.6 5.9 5 3.5 1.4 3.5.9 4.2.9.7 0 2.2-.9 2.5-1.7.3-.8.3-1.5.2-1.7-.1-.2-.4-.3-.8-.5z"
                ></path>
              </svg>
            </a>

            <a
              href={instagramLink}
              target="_blank"
              rel="noreferrer"
              aria-label="Instagram"
              title="Instagram"
              class="group flex h-12 w-12 items-center justify-center rounded-full border border-white/30 bg-white/10 transition hover:scale-110 hover:bg-white/20"
            >
              <svg
                class="h-6 w-6 text-pink-400 transition group-hover:scale-110"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  d="M7.5 2h9A5.5 5.5 0 0 1 22 7.5v9A5.5 5.5 0 0 1 16.5 22h-9A5.5 5.5 0 0 1 2 16.5v-9A5.5 5.5 0 0 1 7.5 2zm0 2A3.5 3.5 0 0 0 4 7.5v9A3.5 3.5 0 0 0 7.5 20h9a3.5 3.5 0 0 0 3.5-3.5v-9A3.5 3.5 0 0 0 16.5 4h-9z"
                ></path>
                <path
                  d="M12 7a5 5 0 1 1 0 10 5 5 0 0 1 0-10zm0 2.1A2.9 2.9 0 1 0 14.9 12 2.9 2.9 0 0 0 12 9.1z"
                ></path>
                <path d="M17.6 6.4a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"></path>
              </svg>
            </a>

            <a
              href={mapsLink}
              target="_blank"
              rel="noreferrer"
              aria-label="Open in Google Maps"
              title="Google Maps"
              class="group flex h-12 w-12 items-center justify-center rounded-full border border-white/30 bg-white/10 transition hover:scale-110 hover:bg-white/20"
            >
              <svg
                class="h-6 w-6 text-blue-400 transition group-hover:scale-110"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path
                  d="M12 2c-3.866 0-7 3.134-7 7 0 5.25 7 13 7 13s7-7.75 7-13c0-3.866-3.134-7-7-7zm0 9.5A2.5 2.5 0 1 1 14.5 9 2.5 2.5 0 0 1 12 11.5z"
                ></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- PORTFOLIO -->
    <section id="portfolio" class="reveal pb-16 pt-10">
      <div class="flex items-end justify-between gap-6">
        <div>
          <h2 class="text-2xl font-semibold md:text-3xl">Portfolio</h2>
          <p class="mt-2 text-sm text-zinc-400">
            A selection of featured work.
          </p>
        </div>

        <a class="text-sm text-zinc-300 hover:text-white" href="/en/works">
          View full portfolio →
        </a>
      </div>

      <div class="mt-8">
        <GalleryLightbox items={featuredItemsEs} galleryId="home-featured" />
      </div>

      <div class="mt-6">
        <a
          href="/en/works"
          class="inline-flex rounded-2xl border border-white/15 px-5 py-3 text-sm font-semibold text-white hover:bg-white/5"
        >
          View all works
        </a>
      </div>
    </section>

    <!-- STYLES -->
    <section id="estilos" class="reveal pb-16 pt-10">
      <h2 class="text-2xl font-semibold md:text-3xl">Styles</h2>

      <div class="mt-8 grid gap-4 md:grid-cols-3">
        {
          [
            {
              t: "Fine line",
              d: "Delicate, elegant thin lines.",
              href: "/en/works#fine-line",
            },
            {
              t: "Blackwork",
              d: "Blank ink, strong contrast and powerful pieces.",
              href: "/en/works#blackwork",
            },
            {
              t: "Color",
              d: "Vibrant pieces with vivid details.",
              href: "/en/works#color",
            },
          ].map((s) => (
            <a
              href={s.href}
              class="block rounded-3xl border border-white/10 bg-white/5 p-6 transition hover:bg-white/10"
            >
              <h3 class="text-lg font-semibold">{s.t}</h3>
              <p class="mt-2 text-sm text-zinc-300">{s.d}</p>
              <p class="mt-4 text-xs text-zinc-400">View works →</p>
            </a>
          ))
        }
      </div>

      <div class="mt-4">
        <a class="text-sm text-zinc-300 hover:text-white" href="/en/works">
          View all styles →
        </a>
      </div>
    </section>

    <!-- Studio -->
<section id="estudio" class="reveal pb-16 pt-10">
  <div class="flex items-end justify-between gap-6">
    <div>
      <h2 class="text-2xl font-semibold md:text-3xl">
        The studio
      </h2>
      <p class="mt-2 text-sm text-zinc-400">
        A clean, comfortable, and professional space.
      </p>
    </div>

    <a
      href={mapsLink}
      target="_blank"
      rel="noreferrer"
      class="text-sm text-zinc-300 hover:text-white"
    >
      See location →
    </a>
  </div>

  <div class="mt-8">
    <GalleryLightbox items={studioItems} galleryId="home-studio" />
  </div>
</section>

    <!-- About -->
    <section id="sobre" class="reveal pb-16 pt-10">
      <div class="rounded-3xl border border-white/10 bg-white/5 p-8 md:p-10">
        <p class="text-xs uppercase tracking-[0.35em] text-zinc-400">
          About Rocío
        </p>

        <h2 class="mt-4 max-w-3xl text-2xl font-semibold md:text-4xl">
          Tattoos with detail, care and a friendly approach.
        </h2>

        <p
          class="mt-5 max-w-3xl text-sm leading-relaxed text-zinc-300 md:text-base"
        >
          I’ve always had a pencil in my hand—drawing has been my favorite hobby
          for as long as I can remember. Falling in love with tattooing happened
          instantly: as a kid I was always covered in temporary tattoos.
        </p>
        <p
          class="mt-5 max-w-3xl text-sm leading-relaxed text-zinc-300 md:text-base"
        >
          I studied at Art School, and I’ve also been passionate about sports,
          earning two certificates as a sports instructor and nutritionist. But
          art has always been my driving force, and in the end I went all in.
        </p>
        <p
          class="mt-5 max-w-3xl text-sm leading-relaxed text-zinc-300 md:text-base"
        >
          Right after the lockdown I made the decision: why not dedicate myself
          to what truly excites me? It’s the best choice I could have made.
          Today I have my own studio in Málaga, and I also travel to different
          cities, leaving a small ink “signature” wherever I go.
        </p>

        <h3 class="mt-10 text-lg font-semibold text-white md:text-xl">
          What you can expect
        </h3>

        <ul class="mt-4 grid gap-3 text-sm text-zinc-300 md:grid-cols-2">
          <li>• Custom designs and pre-session guidance</li>
          <li>• Specialized in fine line and color</li>
          <li>• Friendly approach and comfortable atmosphere</li>
          <li>• Support before and after the session</li>
        </ul>
      </div>
    </section>

    <!-- Reviews -->
    <section class="reveal pb-20">
      <header class="mb-6">
        <h3 class="text-xl font-semibold md:text-2xl">Client reviews</h3>
        <p class="mt-1 text-sm text-zinc-400">Real reviews on Google Maps</p>
      </header>

      <div class="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {
          reviews.slice(0, 6).map((r) => (
            <article class="rounded-2xl border border-white/10 bg-white/5 p-5">
              <header class="flex items-start justify-between gap-3">
                <div class="min-w-0">
                  <p class="truncate text-sm font-semibold text-white">
                    {r.author}
                  </p>
                  <p class="mt-0.5 text-xs text-zinc-500">
                    {r.date}
                    {r.service ? ` · ${r.service}` : ""}
                  </p>
                </div>

                <div class="flex shrink-0 gap-0.5 text-yellow-300">
                  {Array.from({ length: r.rating }).map(() => "★")}
                </div>
              </header>

              <p class="mt-3 text-sm leading-relaxed text-zinc-200">{r.text}</p>
            </article>
          ))
        }
      </div>

      <div class="mt-8 text-center">
        <a
          href={googleMapsReviewsUrl}
          target="_blank"
          rel="noreferrer"
          class="inline-flex items-center justify-center rounded-2xl border border-white/15 bg-white/5 px-6 py-3 text-sm font-semibold text-white hover:bg-white/10"
        >
          See all Google reviews →
        </a>
      </div>
    </section>

    <!-- CONTACT -->
    <section id="contacto" class="reveal pb-20 pt-10">
      <h2 class="text-2xl font-semibold md:text-3xl">Contact</h2>

      <div class="mt-8 grid gap-6 md:grid-cols-2">
        <div class="rounded-3xl border border-white/10 bg-white/5 p-6">
          <p class="text-sm text-zinc-300">Direct booking:</p>

          <div class="mt-8 grid grid-cols-3 gap-4 text-center">
            <a
              href={whatsappLink}
              target="_blank"
              rel="noreferrer"
              class="group flex flex-col items-center gap-2 rounded-2xl border border-white/10 bg-white/5 p-4 transition hover:bg-white/10"
              aria-label="Open WhatsApp"
            >
              <svg
                class="h-7 w-7 text-green-400 transition group-hover:scale-110"
                viewBox="0 0 32 32"
                fill="currentColor"
              >
                <path
                  d="M16 2.7c-7.4 0-13.3 5.7-13.3 12.8 0 2.3.6 4.6 1.9 6.6L2 29.3l7.5-2.4c1.9 1 4.2 1.6 6.5 1.6 7.4 0 13.3-5.7 13.3-12.8S23.4 2.7 16 2.7zm0 23.3c-2.1 0-4.1-.6-5.9-1.6l-.4-.2-4.4 1.4 1.4-4.2-.3-.4c-1.2-1.8-1.8-3.8-1.8-5.9 0-6.1 5.2-11.1 11.4-11.1s11.4 5 11.4 11.1-5.2 11.1-11.4 11.1zm6.4-8.4c-.4-.2-2.2-1-2.6-1.1-.4-.1-.7-.2-1 .2-.3.4-1.1 1.1-1.4 1.4-.3.3-.5.3-.9.1-.4-.2-1.7-.6-3.2-2-.6-.5-1-1.1-1.3-1.5-.3-.4 0-.6.2-.8.2-.2.4-.4.6-.6.2-.2.3-.4.4-.6.1-.2.1-.4 0-.6-.1-.2-1-2.4-1.4-3.3-.4-.9-.7-.7-1-.7h-.9c-.3 0-.6.1-.9.4-.3.3-1.2 1.2-1.2 3 0 1.8 1.2 3.5 1.4 3.7.2.2 2.4 3.6 5.9 5 3.5 1.4 3.5.9 4.2.9.7 0 2.2-.9 2.5-1.7.3-.8.3-1.5.2-1.7-.1-.2-.4-.3-.8-.5z"
                ></path>
              </svg>
              <span class="text-xs text-zinc-200">WhatsApp</span>
            </a>

            <a
              href={instagramLink}
              target="_blank"
              rel="noreferrer"
              class="group flex flex-col items-center gap-2 rounded-2xl border border-white/10 bg-white/5 p-4 transition hover:bg-white/10"
              aria-label="Open Instagram"
            >
